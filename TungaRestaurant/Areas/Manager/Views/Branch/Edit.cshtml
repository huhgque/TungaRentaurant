@model TungaRestaurant.Models.Branch

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Edit Branch</h1>
            <hr />
            <div class="row">
                <div class="m-auto col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<BranchStatus>()" ></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <h2>Rooms</h2>
                <div>
                    <div class="roominfo">
                        <div>room name</div>
                        <div>room type</div>
                        <div>room status</div>
                    </div>
                    <div class="room-dropdown ml-4 border-left border-primary">
                        <div class="d-flex flex-row">
                            <div class="col-3">Table Name</div>
                            <div class="col-3">Table Type</div>
                            <div class="col-3">Table Status</div>
                            <div class="col-3"></div>
                        </div>
                        <form class="bg-table d-flex flex-row" method="post" asp-controller="Table" asp-action="Edit" asp-route-id="tableid">
                            <div class="col-3">table name</div>
                            <div class="col-3">table type</div>
                            <div class="col-3">table status</div>
                            <div class="col-3"><button>Save</button></div>
                        </form>
                        <form class="bg-table d-flex flex-row" method="post" asp-controller="Table" asp-action="Create" asp-route-id="roomid">
                            <input name="RoomId" value="roomid" hidden />
                            <div class="form-group col-3 "> 
                                <input class="form-control" name="Name" /> 
                            </div>
                            <div class="form-group col-3 "> 
                                <select class="form-control custom-select" asp-items="Html.GetEnumSelectList<TableStatus>()"></select>
                            </div>
                            <div class="form-group col-3 ">
                                <input class="form-control" />
                            </div>
                            <div class="col-3"><button>Save</button></div>

                        </form>
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
